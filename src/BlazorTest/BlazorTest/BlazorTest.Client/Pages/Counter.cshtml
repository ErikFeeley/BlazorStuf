@page "/counter"
@inject AppState state

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button onclick="@IncrementCount">Click me</button>

@functions {
    int currentCount = 0;

    protected override void OnInit()
    {
        currentCount = state.Count;
    }

    void IncrementCount()
    {
        state.Count++;
    }
}
